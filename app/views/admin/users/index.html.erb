
<h1>Listing users</h1>

<% if current_user && current_user.admin == true %>

<%= paginate @users %>

  <table>
    <tr>
      <th>Email</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, admin_user_path(user) %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New User', new_admin_user_path %>

<% else %>
  <p>Please <%= link_to "log in", new_admin_session_path %> as an admin to access the administrative tools.</p> 
<% end %>