<%= link_to "Back to all users", admin_users_path %><br/>

<% if current_user && current_user.admin == true %>

  <h2><%= @user.firstname %> (<%= link_to "edit", edit_admin_user_path(@user) %>, <%= link_to "delete", admin_user_path(@user), method: :delete, confirm: "You sure?" %>)</h2>
<% else %>
  <p>Please <%= link_to "log in", new_admin_session_path %> as an admin to access the administrative tools.</p> 
<% end %>
